<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp" >

    <TextView
        android:id="@+id/withdraw_record_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textColor="@color/font_color_666666"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/withdraw_record_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/withdraw_record_item_title"
        android:textColor="@color/font_color_666666"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/withdraw_record_item_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/font_color_666666"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/withdraw_record_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/withdraw_record_item_money"
        android:textColor="@color/font_color_666666"
        android:textSize="14sp" />

</RelativeLayout>