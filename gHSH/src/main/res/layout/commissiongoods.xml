<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/commission_good_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingTop="20dp"
    android:paddingBottom="0dp"
    android:paddingRight="15dp" >

    <ImageView
        android:id="@+id/commission_order_listview_item_image_view"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/body_radius_bg"
        android:padding="1dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/commission_order_listview_item_image_view"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/commission_order_listview_item_goods_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="木子木子秋冬新款韩版纯色男士开衫毛衣纯羊毛正红色包邮"
            android:textColor="@color/font_color_333333"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/commission_order_listview_item_goods_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格：￥109.00"
                android:textColor="@color/font_color_666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/commission_order_listview_item_goods_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="数量：1"
                android:textColor="@color/font_color_666666"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="佣金比率"
                android:textColor="@color/font_color_333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/commission_order_listview_item_goods_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20.00%"
                android:textColor="@color/font_color_red_fc5b5b"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="，佣金金额"
                android:textColor="@color/font_color_333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/commission_order_listview_item_goods_money2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥29.80元"
                android:textColor="@color/font_color_red_fc5b5b"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>