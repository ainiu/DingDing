<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- imageView 样式 -->
    <style name="imageview_style_comment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitXY</item><!-- centerCrop fitXY -->
         <item name="android:src">@drawable/default_image</item>
    </style>
    
	<!-- 平分条 -->
    <style name="ratingBar_style" parent="@android:style/Widget.RatingBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:progressDrawable">@drawable/ratingbar_drawable</item>
        <item name="android:minHeight">22dp</item>
        <item name="android:maxHeight">22dp</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">1</item>
    </style>
    
    <!-- 选择框 -->
    <style name="checkBox_style" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
    </style>


    <!-- 加载条 -->
    <style name="progress_anim_style" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@anim/progress_anim</item>
    </style>

    <!-- 上下移动动画样式 -->
    <style name="anim_up_down" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_button_in</item>
        <item name="@android:windowExitAnimation">@anim/dialog_button_out</item>
    </style>

    <style name="pay_web_ProgressBarHorizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/pay_web_seekbar_img</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:minHeight">3dip</item>
        <item name="android:maxHeight">3dip</item>
    </style>

</resources>