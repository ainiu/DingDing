<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="50dp"
        layout="@layout/header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/modify_old_pwd"
                    style="@style/edittext_style_radius_border"
                    android:layout_marginTop="5dp"
                    android:hint="@string/mymodify_pwd_old_pwd"
                    android:inputType="textPassword" />

                <EditText
                    android:id="@+id/modify_new_pwd1"
                    style="@style/edittext_style_radius_border"
                    android:layout_marginTop="5dp"
                    android:hint="@string/mymodify_pwd_new_pwd1"
                    android:inputType="textPassword" />

                <EditText
                    android:id="@+id/modify_new_pwd2"
                    style="@style/edittext_style_radius_border"
                    android:layout_marginTop="5dp"
                    android:hint="@string/mymodify_pwd_new_pwd2"
                    android:inputType="textPassword" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>