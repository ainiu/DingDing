<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical" >

    <include layout="@layout/header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/register_mobile"
                    style="@style/edittext_style_radius_border"
                    android:layout_gravity="left|center_vertical"
                    android:hint="@string/register_hint_mobile"
                    android:inputType="textPhonetic" />

                <Button
                    android:id="@+id/register_verify_button"
                    style="@style/button_style_fun_border"
                    android:layout_gravity="right|center_vertical"
                    android:background="@drawable/button_while_radius_gray_border_bg"
                    android:text="@string/register_button_verify" 
                    android:textColor="@color/font_color_999999"
                    android:layout_marginRight="5dp"/>
            </FrameLayout>

            <EditText
                android:id="@+id/register_verify"
                style="@style/edittext_style_radius_border"
                android:layout_marginTop="5dp"
                android:hint="@string/register_hint_verify" />

            <EditText
                android:id="@+id/register_password1"
                style="@style/edittext_style_radius_border"
                android:layout_marginTop="5dp"
                android:hint="@string/register_hint_password"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/register_password2"
                style="@style/edittext_style_radius_border"
                android:layout_marginTop="5dp"
                android:hint="@string/register_hint_confirmpwd"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/register_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:text="@string/register_text_login"
                android:textColor="@color/font_color_666666"
                android:textSize="16sp" />

            <Button
                android:id="@+id/register_button"
                style="@style/button_style_fun_border"
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_blue_bg"
                android:text="@string/register_button_regist" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>