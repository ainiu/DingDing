<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:background="@color/app_bg_color"
    android:orientation="vertical"
    android:padding="20dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="省份："
            android:textColor="@color/font_color_333333"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/region_province"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_selector" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="城市："
            android:textColor="@color/font_color_333333"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/region_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_selector" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="区域："
            android:textColor="@color/font_color_333333"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/region_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_selector" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/region_confirm"
            style="@style/button_style_fun_border"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_red_bg"
            android:text="@string/confirm" />

        <Button
            android:id="@+id/region_cancel"
            style="@style/button_style_fun_border"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_gray_dark_bg"
            android:text="@string/cancel" />
    </LinearLayout>

</LinearLayout>