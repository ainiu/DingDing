<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:background="@drawable/listview_item_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="1dp" >
 
        <ImageView
            android:id="@+id/goods_item_image"
            style="@style/imageview_style_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/goods_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            android:textColor="@color/black_font_color"
            android:textSize="@dimen/fontSize_goods_list_title" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/goods_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/goods_price_color"
                android:textSize="@dimen/fontSize_goods_list_price" />

            <TextView
                android:id="@+id/goods_item_price_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/goods_item_price"
                android:layout_toRightOf="@+id/goods_item_price"
                android:textColor="@color/font_color_999999"
                android:textSize="@dimen/fontSize_goods_list_price" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>