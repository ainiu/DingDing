<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical" >

    <include layout="@layout/header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/border_color"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/logistics_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_color_666666"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/logistics_invoiceno_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_color_999999"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/logistics_status_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_color_999999"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/body_rectangle_while_border_bg"
        android:padding="10dp"
        android:text="物流跟踪"
        android:textColor="@color/font_color_666666"
        android:textSize="14sp" />

    <ListView
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:dividerHeight="0dp"
        android:divider="@color/transparent" />

</LinearLayout>