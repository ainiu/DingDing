<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    android:background="@drawable/body_radus_gary_border_bg"
    android:orientation="vertical"
    android:padding="15dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/dialog_qq_share_weibo_image_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:background="@drawable/body_rectangle_while_border_bg"
            android:padding="1dp"
            android:src="@drawable/default_image" />

        <TextView
            android:id="@+id/dialog_qq_share_weibo_title_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/dialog_qq_share_weibo_image_view"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/font_color_333333"
            android:textSize="14sp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/dialog_qq_share_weibo_comment_view"
        style="@style/edittext_style_radius_border"
        android:layout_marginTop="10dp"
        android:gravity="top"
        android:lines="1"
        android:maxLines="1"
        android:padding="10dp"
        android:singleLine="false"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_qq_share_weibo_cancel_button"
            style="@style/button_style_fun_border"
            android:layout_margin="5dp"
            android:background="@drawable/button_while_radius_gray_border_bg"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/cancel"
            android:textColor="@color/font_color_666666" />

        <Button
            android:id="@+id/dialog_qq_share_weibo_send_button"
            style="@style/button_style_fun_border"
            android:layout_margin="5dp"
            android:background="@drawable/button_red_bg"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/send" />
    </LinearLayout>

</LinearLayout>