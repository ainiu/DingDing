<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview_item_bg"
    android:padding="15dp" >

    <TextView
        android:id="@+id/coupon_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/font_color_666666"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/coupon_item_checkBox"
        style="@style/checkBox_style"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:focusable="false" />

    <TextView
        android:id="@+id/coupon_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/coupon_item_checkBox"
        android:singleLine="true"
        android:textColor="@color/goods_price_color"
        android:textSize="16sp" />

</RelativeLayout>