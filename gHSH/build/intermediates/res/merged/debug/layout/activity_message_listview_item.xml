<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/body_rectangle_while_border_bg"
    android:orientation="vertical"
    android:padding="15dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/meaasge_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/font_color_red"
            android:textSize="16sp" />

        <Button
            android:id="@+id/meaasge_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/transparent"
            android:drawableRight="@drawable/measge_down_icon"
            android:focusable="false" />
    </RelativeLayout>

    <TextView
        android:id="@+id/meaasge_item_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/font_color_999999"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/meaasge_item_desc_short"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/font_color_999999"
        android:textSize="14sp" />
    
    <TextView
        android:id="@+id/meaasge_item_desc_long"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textColor="@color/font_color_999999"
        android:textSize="14sp" 
        android:visibility="gone"/>

</LinearLayout>