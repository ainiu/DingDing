<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/header" />

    <TextView
        android:id="@+id/new_details_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/font_color_666666"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/new_details_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="时间：2015-5-5"
        android:textColor="@color/font_color_999999"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line_dotted"
        android:layout_marginBottom="10dp" />

    <WebView
        android:id="@+id/new_details_webview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>