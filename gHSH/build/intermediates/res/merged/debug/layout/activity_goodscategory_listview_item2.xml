<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/goodscategory_item_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/default_image" />

    <TextView
        android:id="@+id/goodscategory_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/goodscategory_item_image"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/goods_category_text_select_color"
        android:textSize="@dimen/fontSize_goods_category_listview_2_title" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/before_gray_icon" />

</RelativeLayout>