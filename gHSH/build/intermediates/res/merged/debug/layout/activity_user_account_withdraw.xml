<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical" >

    <include layout="@layout/header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical" >

             <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp" >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/commission_money_icon" />

                <TextView
                    android:id="@+id/current_money_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="余额：0.00"
                    android:textColor="@color/font_color_red"
                    android:textSize="14sp" />
            </LinearLayout>
            
            <EditText
                android:id="@+id/money_view"
                style="@style/edittext_style_radius_border"
                android:hint="提现金额"
                android:inputType="none" />

            <EditText
                android:id="@+id/truename_view"
                style="@style/edittext_style_radius_border"
                android:layout_marginTop="5dp"
                android:hint="真实姓名" />

            <EditText
                android:id="@+id/bankname_view"
                style="@style/edittext_style_radius_border"
                android:layout_marginTop="5dp"
                android:hint="开户行" />
            
            <EditText
                android:id="@+id/banknum_view"
                style="@style/edittext_style_radius_border"
                android:layout_marginTop="5dp"
                android:hint="银行账号" />
            

            <EditText
                android:id="@+id/mobile_view"
                style="@style/edittext_style_radius_border"
                android:layout_marginTop="5dp"
                android:hint="手机号" />

            <EditText
                android:id="@+id/desc_view"
                style="@style/edittext_style_radius_border"
                android:layout_marginTop="5dp"
                android:hint="备注" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>