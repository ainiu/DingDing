<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/orderdetails_ensure_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/body_rectangle_while_bg_color"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="@string/orderdetails_text_ensure"
        android:textColor="@color/font_color_666666"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/orderdetalis_ensure_icon1"
            android:gravity="center"
            android:text="@string/orderdetails_text_ensure1"
            android:textColor="@color/font_color_666666"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/orderdetalis_ensure_icon2"
            android:gravity="center"
            android:text="@string/orderdetails_text_ensure2"
            android:textColor="@color/font_color_666666"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/orderdetalis_ensure_icon3"
            android:gravity="center"
            android:text="@string/orderdetails_text_ensure3"
            android:textColor="@color/font_color_666666"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/orderdetalis_ensure_icon4"
            android:gravity="center"
            android:text="@string/orderdetails_text_ensure4"
            android:textColor="@color/font_color_666666"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line_dotted" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/orderdetails_text_ensure_phone"
            android:textColor="@color/font_color_666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/orderdetails_ensure_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_color_red"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line_dotted" />

    <TextView
        android:id="@+id/orderdetails_ordertime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textColor="@color/font_color_666666"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/border_color" />

</LinearLayout>