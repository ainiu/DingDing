<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical" >

    <include layout="@layout/header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/body_rectangle_while_dddddd_border_bg"
                android:stretchColumns="1" >

                <TableRow
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/withdraw_text_record_bank_add_name"
                        android:textColor="@color/font_color_333333"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/withdraw_bank_add_name"
                        style="@style/edittext_style_radius_border"
                        android:layout_marginTop="5dp"
                        android:background="@color/transparent"
                        android:hint="@string/withdraw_hint_record_bank_add_name" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/border_color_dddddd" />

                <TableRow
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/withdraw_text_record_bank_add_card"
                        android:textColor="@color/font_color_333333"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/withdraw_bank_add_card"
                        style="@style/edittext_style_radius_border"
                        android:layout_marginTop="5dp"
                        android:background="@color/transparent"
                        android:hint="@string/withdraw_hint_record_bank_add_card" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/border_color_dddddd" />

                <TableRow
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/withdraw_text_record_bank_add_bankName"
                        android:textColor="@color/font_color_333333"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/withdraw_bank_add_bankName"
                        style="@style/edittext_style_radius_border"
                        android:layout_marginTop="2dp"
                        android:background="@color/transparent"
                        android:hint="@string/withdraw_hint_record_bank_add_bankName" />
                </TableRow>
            </TableLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="*提现金额需大于10元，提现后2-3个工作日到账"
                android:textColor="@color/font_color_red_fc5b5b"
                android:textSize="12sp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/body_rectangle_while_dddddd_border_bg"
                android:stretchColumns="1" >

                <TableRow
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/withdraw_text_record_bank_add_mobile"
                        android:textColor="@color/font_color_333333"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/withdraw_bank_add_mobile"
                        style="@style/edittext_style_radius_border"
                        android:layout_marginTop="5dp"
                        android:background="@color/transparent"
                        android:hint="@string/withdraw_hint_record_bank_add_mobile" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/border_color_dddddd" />

                <TableRow
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/withdraw_hint_record_bank_add_vil"
                        android:textColor="@color/font_color_333333"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/withdraw_bank_add_verify"
                        style="@style/edittext_style_radius_border"
                        android:layout_marginTop="5dp"
                        android:background="@color/transparent"
                        android:hint="@string/withdraw_hint_record_bank_add_vil" />
                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/withdraw_alipay_button"
                style="@style/button_style_fun_border"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/button_red_bg"
                android:text="@string/add" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>