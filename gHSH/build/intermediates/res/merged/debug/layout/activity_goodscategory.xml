<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical" >

    <include layout="@layout/header" />

    <LinearLayout
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/listview_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" >

            <ListView
                android:id="@+id/goodscategory_listView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@drawable/line_dotted"
                android:dividerHeight="1dp"
                android:listSelector="@color/transparent"
                android:scrollbars="none" />

            <ListView
                android:id="@+id/goodscategory_listView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:divider="@drawable/line_dotted"
                android:dividerHeight="1dp"
                android:listSelector="@color/transparent" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/gridView_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="gone" >

            <GridView
                android:id="@+id/goodscategory_gridView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:horizontalSpacing="10dp"
                android:listSelector="@color/transparent"
                android:numColumns="3"
                android:scrollbars="none"
                android:verticalSpacing="10dp" />

            <GridView
                android:id="@+id/goodscategory_gridView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="90dp"
                android:horizontalSpacing="10dp"
                android:listSelector="@color/transparent"
                android:numColumns="3"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp"
                android:verticalSpacing="10dp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>