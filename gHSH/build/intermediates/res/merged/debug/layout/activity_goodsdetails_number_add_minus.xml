<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/number_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageButton
        android:id="@+id/number_minus_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/button_number_button_bg"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:src="@drawable/shoppint_minus_text_icon" />

    <TextView
        android:id="@+id/number_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/number_minus_button"
        android:background="@drawable/button_number_button_bg"
        android:ems="5"
        android:gravity="center"
        android:maxLength="2"
        android:paddingBottom="7dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="7dp"
        android:singleLine="true"
        android:text="1"
        android:textColor="@color/font_color_666666" />

    <ImageButton
        android:id="@+id/number_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/number_input"
        android:background="@drawable/button_number_button_bg"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:src="@drawable/shoppint_add_text_icon" />

</RelativeLayout>