<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="15dp"
    android:paddingTop="5dp" >

    <ImageView
        android:id="@+id/goods_item_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/default_image" />

    <TextView
        android:id="@+id/goods_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/goods_item_image"
        android:ellipsize="end"
        android:lines="2"
        android:maxLines="2"
        android:textColor="@color/font_color_333333"
        android:textSize="@dimen/fontSize_goods_list_title" />

    <TextView
        android:id="@+id/goods_item_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goods_item_name"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/goods_item_image"
        android:ellipsize="end"
        android:textColor="@color/font_color_999999"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/goods_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goods_item_desc"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/goods_item_image"
        android:textColor="@color/goods_price_color"
        android:textSize="@dimen/fontSize_goods_list_price"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/goods_item_price_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/goods_item_price"
        android:layout_below="@+id/goods_item_desc"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/goods_item_price"
        android:textColor="@color/font_color_999999"
        android:textSize="14sp" />

</RelativeLayout>