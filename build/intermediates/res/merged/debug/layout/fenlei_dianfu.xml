        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fenlei_dianfu_text_05"
        android:layout_below="@+id/fenlei_dianfu_text_05"
        android:text="认证 : "
        android:textColor="#666666"
        android:textSize="11sp" />

