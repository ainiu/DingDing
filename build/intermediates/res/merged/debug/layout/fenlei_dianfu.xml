        android:id="@+id/fenlei_dianfu_text_05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fenlei_dianfu_text_03"
        android:layout_below="@+id/fenlei_dianfu_text_03"
