        android:id="@+id/fenlei_dianfu_text_08"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/fenlei_dianfu_text_07"
        android:layout_toRightOf="@+id/fenlei_dianfu_text_07"
        android:text="已认证"
        android:textColor="#666666"
        android:textSize="11sp" />

