<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/haiwai_girdView_list_view_image_01"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ding_128" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sou_girdView_list_view_text_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="8"
            android:singleLine="true"
            android:text="雅诗兰黛肌透修护眼部精"
            android:textColor="#666666"
            android:textSize="10sp" />


        <LinearLayout
            android:id="@+id/haiwai_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/haiwai_dianputuijian_huodongjia"
                android:textSize="10sp"
                />
            <TextView
                android:id="@+id/haiwai_dianputuijian_shoujia"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="¥78.0"
                android:textColor="#333333"
                android:textSize="10sp" />

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/ding_33"
                />
            <TextView
                android:id="@+id/haiwai_dianputuijian_liebie"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="美妆"
                android:textColor="#651f0303"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>