<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/shouhuo_list_relativeLayout_01"
        android:layout_width="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_height="100dp"
        android:padding="13dp"
        android:background="@drawable/ding_68" >
        
        <TextView
            android:id="@+id/shouhuo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#666666"
            android:textSize="12sp"
            android:text="木子李" />

        <TextView
            android:id="@+id/shouhuo_phone"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:singleLine="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/shouhuo_name"
            android:text="131****8989" 
            android:textColor="#666666"
            android:textSize="13sp"
            />

        <ImageView
            android:id="@+id/shouhuo_list_image_02"
            android:layout_width="30dp"
            android:layout_height="15dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/shouhuo_phone"
            android:src="@drawable/ding_131" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/shouhuo_list_image_02"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:lines="2"
            android:text="广东省深圳市宝安机场东下十围下沙南6巷7号2东楼801"
            android:textColor="#999999"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/shouhuo_list_image_03"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="55dp"
            android:src="@drawable/ding_132" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ding_134" />

    </RelativeLayout>

</LinearLayout>