	        <!-- android:radius 弧形的半径 -->
	        <corners android:radius="7dip" />
	         <stroke android:width="1dp" android:color="@color/button_gary_light_border_color"/>
	    </shape>
	</item>
	<item>
		<shape android:shape="rectangle">
	        <!-- 填充的颜色 -->
	        <solid android:color="@color/button_gary_light_bg_color" />
	        <!-- android:radius 弧形的半径 -->
	        <corners android:radius="7dip" />
