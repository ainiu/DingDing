<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisPeopleActivity" >

<RelativeLayout
    android:id="@+id/relativeLayout01"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#000000" 
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    >
    <TextView 
        android:id="@+id/textView01"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="手机注册"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/biao"
        android:layout_marginLeft="12dp"
        android:onClick="doClick" />

</RelativeLayout>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/relativeLayout01"
    android:background="@mipmap/denglu" >
    <ImageView
            android:id="@+id/imageView1"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="65dp"
            android:src="@mipmap/phonea" />

        <EditText
            android:id="@+id/zhuCeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView1"
            android:layout_alignTop="@+id/imageView1"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="30dp"
            android:background="@null"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="请输入手机号"
            android:inputType="number"
            android:textColor="#919191"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imageView1"
            android:layout_marginTop="10dp"
            android:src="@mipmap/line_page" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignLeft="@+id/imageView1"
            android:layout_below="@+id/imageView2"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ico2" />
        <EditText
            android:id="@+id/zhuCePassed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageView4"
            android:layout_alignLeft="@+id/zhuCeName"
            android:layout_alignRight="@+id/zhuCeName"
            android:background="@null"
            android:ems="10"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColor="#919191" 
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imageView3"
            android:layout_marginTop="9dp"
            android:src="@mipmap/line_page" />

        <EditText
            android:id="@+id/zheCeYan"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_below="@+id/imageView4"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:ems="10"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textSize="12sp" 
            android:textColor="#919191" >

            <requestFocus />
        </EditText>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_below="@+id/zheCeYan"
            android:layout_marginTop="15dp"
            android:src="@mipmap/line_page" />

        <Button
            android:id="@+id/button11"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignLeft="@+id/zheCeYan"
            android:layout_alignRight="@+id/button12"
            android:layout_below="@+id/imageView5"
            android:layout_marginTop="35dp"
            android:background="@mipmap/page_kuang"
            android:text="完  成"
            android:textColor="#E6E6E6"
            android:textSize="17sp" />

        <Button
            android:id="@+id/button12"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_alignBottom="@+id/imageView5"
            android:layout_alignRight="@+id/zhuCePassed"
            android:background="@mipmap/page_xiaokuang"
            android:text="获取验证码"
            android:textColor="#9F9F9F"
            android:textSize="13sp" />

  </RelativeLayout>
</RelativeLayout>
