<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@mipmap/picture_49" >

    <Button
        android:id="@+id/main_button_01"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:text="我是司机" 
        android:textSize="20sp"
        android:textColor="@drawable/main_list_button"
        android:onClick="doClick"
        android:background="@mipmap/page_kuang"/>

    <Button
        android:id="@+id/main_button_02"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/main_button_01"
        android:layout_alignRight="@+id/main_button_01"
        android:layout_below="@+id/main_button_01"
        android:layout_marginTop="55dp"
        android:text="我是用户" 
        android:textSize="20sp"
        android:textColor="@drawable/main_list_button"
        android:background="@mipmap/page_kuang"
        android:onClick="doClick"/>
  
</RelativeLayout>
