<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/picture_49"
    tools:context=".DriverActivity" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <TextView
            android:id="@+id/driver_text_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="登录"
            android:textColor="#FFFFFF"
            android:textSize="21sp" />

        <ImageView
            android:id="@+id/driver_image_01"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/picture_04" />
    </RelativeLayout>

    <TextView
        android:id="@+id/driver_text_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="130dp"
        android:text="手机号"
        android:textColor="#BDBCBC"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/driver_image_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/driver_text_02"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/driver_text_02"
        android:layout_marginRight="35dp"
        android:layout_marginTop="3dp"
        android:src="@mipmap/picture_80" />

    <ImageView
        android:id="@+id/driver_image_03"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_above="@+id/driver_image_02"
        android:layout_alignRight="@+id/driver_image_02"
        android:layout_marginBottom="4dp"
        android:src="@mipmap/picture_81" />

    <EditText
        android:id="@+id/driver_edit_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/driver_image_03"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_toLeftOf="@+id/driver_image_03"
        android:layout_toRightOf="@+id/driver_text_02"
        android:background="@null"
        android:ems="10"
        android:inputType="number"
        android:textColor="#BDBCBC"
        android:textSize="12sp" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/driver_text_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/driver_image_02"
        android:layout_below="@+id/driver_image_02"
        android:layout_centerVertical="true"
        android:layout_marginTop="35dp"
        android:text="密码"
        android:textColor="#BDBCBC"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/driver_image_04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/driver_text_03"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/driver_text_03"
        android:layout_marginRight="35dp"
        android:layout_marginTop="3dp"
        android:src="@mipmap/picture_80" />

    <EditText
        android:id="@+id/driver_edit_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/driver_image_04"
        android:layout_alignRight="@+id/driver_edit_01"
        android:layout_toRightOf="@+id/driver_text_03"
        android:background="@null"
        android:layout_marginLeft="7dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#BDBCBC"
        android:textSize="12sp" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_alignRight="@+id/driver_image_04"
        android:layout_below="@+id/driver_image_04"
        android:layout_marginTop="8dp"
        android:text="记住密码"
        android:textColor="#BDBCBC"
        android:textSize="13sp" />

    <Button
        android:id="@+id/driver_button_01"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/driver_image_04"
        android:layout_alignRight="@+id/checkBox1"
        android:layout_below="@+id/checkBox1"
        android:layout_marginTop="25dp"
        android:text="登录" 
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:background="@mipmap/picture_82"/>

    <Button
        android:id="@+id/driver_button_02"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_alignRight="@+id/driver_button_01"
        android:layout_below="@+id/driver_button_01"
        android:layout_marginTop="8dp"
        android:text="忘记密码？"
        android:background="@null" 
        android:textSize="13sp"
        android:textColor="#BDBCBC"/>

    <Button
        android:id="@+id/driver_button_03"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="立即注册" 
        android:background="@null"
        android:textSize="13sp"
        android:textColor="#BDBCBC"
        />

</RelativeLayout>