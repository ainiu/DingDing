<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShouSuoActivity" >

<RelativeLayout 
    android:id="@+id/shousuo_relativeLayout_01"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:background="#000000"
    >
    
    <ImageView 
        android:id="@+id/shousuo_image_01"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/picture_04"
        />
    
    <ImageView 
        android:id="@+id/shousuo_image_02"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/shousuo_image_01"
        android:layout_marginLeft="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp"
        android:layout_centerVertical="true"
        android:background="@mipmap/picture_121"
        />

    <ImageView
        android:id="@+id/shousuo_image_03"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_alignLeft="@+id/shousuo_image_02"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/piature_122" />
    
    <EditText 
        android:id="@+id/shousuo_edit_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/shousuo_image_03"
        android:layout_marginLeft="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="45dp"
        android:background="@null"
        android:layout_centerVertical="true"
        android:hint="请输入地点、目的地、车型..."
        android:textSize="12sp"
        />
    
</RelativeLayout>

<RelativeLayout 
    android:id="@+id/shousuo_relativeLayout_02"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true"
    android:layout_below="@+id/shousuo_relativeLayout_01"
    android:background="#F4F4F4"
    
    >

    <RelativeLayout
        android:id="@+id/shousuo_relativeLayout_03"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp" 
        android:background="#FFFFFF">
    </RelativeLayout>

</RelativeLayout>

</RelativeLayout>
