<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverMyMoneyActivity" >

    <RelativeLayout
        android:id="@+id/driver_my_money_01"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="#000000" >

        <TextView
            android:id="@+id/driver_text_money_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="我的账户"
            android:textColor="#FFFFFF"
            android:textSize="21sp" />

        <ImageView
            android:id="@+id/driver_image_money_01"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/picture_04" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/driver_my_money_02"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/driver_my_money_01"
        android:background="#F6F6F6" >
    </RelativeLayout>

    <ImageView
        android:id="@+id/driver_image_money_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/driver_my_money_02"
        android:src="@mipmap/picture_90" />

    <RelativeLayout
        android:id="@+id/driver_my_money_03"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/driver_image_money_02" >

        <TextView
            android:id="@+id/driver_text_money_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="我的账户"
            android:textColor="#999999"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/driver_text_money_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/driver_text_money_02"
            android:text="¥"
            android:textColor="#E3841E"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/driver_text_money_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/driver_text_money_03"
            android:layout_alignBottom="@+id/driver_text_money_03"
            android:layout_centerHorizontal="true"
            android:text="0.00"
            android:textColor="#E3841E"
            android:textSize="40sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/driver_image_money_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/driver_my_money_03"
        android:src="@mipmap/picture_90" />

    <RelativeLayout
        android:id="@+id/driver_my_money_04"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/driver_image_money_03" >

        <TextView
            android:id="@+id/driver_text_money_05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="今日进账"
            android:textColor="#999999"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/driver_text_money_06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:text="¥"
            android:textColor="#E3841E"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/driver_text_money_07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="0.00"
            android:textColor="#E3841E"
            android:textSize="14sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/driver_image_money_04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/driver_my_money_04"
        android:src="@mipmap/picture_90" />

    <RelativeLayout
        android:id="@+id/driver_my_money_05"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/driver_image_money_04" >

        <TextView
            android:id="@+id/driver_text_money_08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="历史进账"
            android:textColor="#999999"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/driver_text_money_09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:text="¥"
            android:textColor="#E3841E"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/driver_text_money_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="0.00"
            android:textColor="#E3841E"
            android:textSize="14sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/driver_image_money_05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/driver_my_money_05"
        android:src="@mipmap/picture_90" />

    <RelativeLayout
        android:id="@+id/driver_my_money_06"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/driver_image_money_05"
        android:background="#F6F6F6" >
    </RelativeLayout>

    <ImageView
        android:id="@+id/driver_image_money_06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/driver_my_money_06"
        android:src="@mipmap/picture_90" />

    <LinearLayout
        android:id="@+id/driver_my_money_07"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/driver_image_money_06"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/driver_my_money_08"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/driver_image_money_09"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@mipmap/picture_62" />

            <TextView
                android:id="@+id/driver_text_money_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/driver_image_money_09"
                android:text="转到支付宝"
                android:textColor="#111111"
                android:textSize="17sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/driver_image_money_08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/picture_99" />

        <RelativeLayout
            android:id="@+id/driver_my_money_09"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1" >
            
            <ImageView 
                android:id="@+id/driver_image_money_10"
                android:layout_height="22dp"
                android:layout_width="22dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/picture_61"
                />
            
            <TextView 
                android:id="@+id/driver_text_money_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/driver_image_money_10"
                android:layout_marginLeft="8dp"
                android:text="转到银行卡"
                android:textColor="#111111"
                android:textSize="17sp"
                />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/driver_image_money_07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/driver_my_money_07"
        android:src="@mipmap/picture_90" />

</RelativeLayout>