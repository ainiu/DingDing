<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape android:shape="rectangle">
	        <!-- 填充的颜色 -->
	        <solid android:color="@color/button_while_select_bg_color" />
	        <!-- 设置矩形的四个角为弧形 -->
	        <!-- android:radius 弧形的半径 -->
	        <corners android:radius="7dip" />
	        <stroke android:width="1dp" android:color="@color/button_while_gary_border_color" />
	    </shape>
	</item>
 
	<item android:state_focused="true">
		<shape android:shape="rectangle">
	        <!-- 填充的颜色 -->
	        <solid android:color="@color/button_while_select_bg_color" />
	        <!-- 设置矩形的四个角为弧形 -->
	        <!-- android:radius 弧形的半径 -->
	        <corners android:radius="7dip" />
	         <stroke android:width="1dp" android:color="@color/button_while_gary_border_color" />
	    </shape>
	</item>
	<item>
		<shape android:shape="rectangle">
	        <!-- 填充的颜色 -->
	        <solid android:color="@color/button_while_bg_color" />
	        <!-- 设置矩形的四个角为弧形 -->
	        <!-- android:radius 弧形的半径 -->
	        <corners android:radius="7dip" />
	         <stroke android:width="1dp" android:color="@color/button_while_gary_border_color" />
	    </shape>
	</item>
</selector>



