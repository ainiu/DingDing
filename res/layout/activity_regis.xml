<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisActivity" >

    <RelativeLayout
        android:id="@+id/regis_relativeLayout_01"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#1FA9EB" >

        <TextView
            android:id="@+id/regis_text_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="注册"
            android:textColor="#FFFFFF"
            android:textSize="21sp" />

        <ImageView
            android:id="@+id/regis_image_01"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:onClick="doClick"
            android:src="@drawable/ding_110" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/regis_relativeLayout_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/regis_relativeLayout_01"
        android:background="#F6F6F6" >

        <ImageView
            android:id="@+id/regis_image_02"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ding_112" />

        <EditText
            android:id="@+id/regis_edit_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/regis_image_02"
            android:layout_alignLeft="@+id/regis_image_02"
            android:layout_alignRight="@+id/regis_image_02"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:ems="10"
            android:hint="请输入手机号码或邮箱"
            android:textColor="#999999"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/regis_image_03"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/regis_image_02"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ding_112" />

        <EditText
            android:id="@+id/regis_edit_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/regis_image_03"
            android:layout_alignLeft="@+id/regis_edit_01"
            android:layout_alignRight="@+id/regis_image_03"
            android:layout_marginBottom="9dp"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:ems="10"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColor="#999999"
            android:textSize="13sp" >
        </EditText>

        <ImageView
            android:id="@+id/regis_image_04"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/regis_image_03"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ding_112" />

        <EditText
            android:id="@+id/regis_edit_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/regis_image_04"
            android:layout_alignLeft="@+id/regis_edit_02"
            android:layout_alignRight="@+id/regis_edit_02"
            android:layout_marginBottom="9dp"
            android:background="@null"
            android:ems="10"
            android:hint="确认密码"
            android:inputType="textPassword"
            android:textColor="#999999"
            android:textSize="13sp" >
        </EditText>

        <ImageView
            android:id="@+id/regis_image_05"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/regis_image_04"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ding_113" />

        <EditText
            android:id="@+id/regis_edit_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/regis_edit_03"
            android:layout_alignRight="@+id/regis_image_05"
            android:layout_alignTop="@+id/regis_image_05"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:ems="10"
            android:hint="请输入验证码"
            android:textColor="#999999"
            android:textSize="13sp" >
        </EditText>

        <Button
            android:id="@+id/regis_button_01"
            android:layout_width="80dp"
            android:layout_height="12dp"
            android:layout_alignBottom="@+id/regis_image_05"
            android:layout_alignLeft="@+id/regis_image_06"
            android:background="@null"
            android:onClick="doClick"
            android:text="看不清,换一张"
            android:textColor="#7A7A7A"
            android:textSize="10sp" />

        <CheckBox
            android:id="@+id/regis_checkbox_01"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/regis_image_05"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:checked="false"
            android:text="我已经阅读并同意"
            android:textColor="#787878"
            android:textSize="10sp" />

        <Button
            android:id="@+id/regis_button_02"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_below="@+id/regis_image_05"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/regis_checkbox_01"
            android:background="@null"
            android:onClick="doClick"
            android:text="《叮叮网服务条款》"
            android:textColor="#37B1EC"
            android:textSize="10sp" />

        <Button
            android:id="@+id/regis_button_03"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_alignLeft="@+id/regis_image_05"
            android:layout_alignRight="@+id/regis_edit_03"
            android:layout_below="@+id/regis_checkbox_01"
            android:layout_marginTop="23dp"
            android:background="@drawable/btn_yuanjiao_lan"
            android:onClick="doClick"
            android:text="注  册"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/regis_image_07"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignLeft="@+id/regis_button_03"
            android:layout_below="@+id/regis_button_03"
            android:layout_marginTop="8dp"
            android:src="@drawable/ding_114" />

        <Button
            android:id="@+id/regis_button_04"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_below="@+id/regis_button_03"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/regis_image_07"
            android:background="@null"
            android:onClick="doClick"
            android:text="已有账号，返回登录"
            android:textColor="#999999"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/regis_image_08"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/regis_image_07"
            android:layout_below="@+id/regis_button_04"
            android:src="@drawable/ding_90" />

        <ImageView
            android:id="@+id/regis_image_06"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_above="@+id/regis_button_01"
            android:layout_toRightOf="@+id/regis_button_02"
            android:src="@drawable/ding_88" />


    </RelativeLayout>
    

</RelativeLayout>