<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/myorder_relativeLayout_01"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#1FA9EB">

        <TextView
            android:id="@+id/myorder_text_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="商品详情"
            android:textColor="#FFFFFF"
            android:textSize="21sp" />

        <ImageView
            android:id="@+id/shoping_finsh"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:onClick="doClick"
            android:src="@drawable/ding_110" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/haiwaixiangqing_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/myorder_relativeLayout_01"
        android:layout_marginBottom="60dp">
        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.baidu.dingding.view.banner.BannerImageView
                android:id="@+id/sou_banner"
                android:layout_width="match_parent"
                android:layout_height="150dp" />


            <RelativeLayout
                android:id="@+id/haiwai_shoping_xiangqing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp">

                <TextView
                    android:id="@+id/haiwai_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:enabled="true"
                    android:maxEms="15"
                    android:text="内衣1315463"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/imag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="13dp"
                    android:layout_toLeftOf="@+id/haiwai_share"
                    android:src="@drawable/ding_64" />

                <Button
                    android:id="@+id/haiwai_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:drawableTop="@drawable/ding_39"
                    android:text="分享" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/haiwai_shang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/haiwai_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商城价 : " />

                <TextView
                    android:id="@+id/haiwai_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123"
                    android:textColor="#ff3412"
                    android:textSize="19sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/haiwai_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/haiwai_yunfei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="运费 :" />

                    <TextView
                        android:id="@+id/haiwai_yunfei_moenty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00元" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/haiwai_jingqixiaoliang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="近期销量 :" />

                    <TextView
                        android:id="@+id/haiwai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500" />
                </LinearLayout>

                <TextView
                    android:id="@+id/haiwai_liulanliang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="浏览量 :" />

                <TextView
                    android:id="@+id/haiwai_rensu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/haiwai_wu"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="7dp"
                android:background="#e9ece8"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/haiwai_daohuo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="到货时间 :" />

                    <TextView
                        android:id="@+id/haiwai_daohuoshijian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/haiwai_suo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="所在地 :" />

                    <TextView
                        android:id="@+id/haiwai_suozaidi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="中国" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/haiwai_ycd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="产原地 :" />

                    <TextView
                        android:id="@+id/haiwai_cyd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="美国" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务 :" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ding_40" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ding_41" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/haiwai_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">


                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:background="@drawable/wang_35"
                    android:orientation="horizontal"
                    android:padding="1dp">

                    <RadioButton
                        android:id="@+id/radio_btn_xq"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/haiwai_shoping_xiangqing"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:text="商品详情"
                        android:textColor="@color/haiwai_color_shoping" />

                    <RadioButton
                        android:id="@+id/radio_btn_tj"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/haiwai_shoping_dianpu"
                        android:button="@null"
                        android:gravity="center"
                        android:text="店铺推荐"
                        android:textColor="@color/haiwai_color_shoping" />

                    <RadioButton
                        android:id="@+id/radio_btn_lyb"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/haiwai_shoping_liuyan"
                        android:button="@null"
                        android:gravity="center"
                        android:text="留言板"
                        android:textColor="@color/haiwai_color_shoping" />

                </RadioGroup>


            </LinearLayout>


        </LinearLayout>

        <com.baidu.dingding.view.MyView.NoScrollViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFF"
            android:layout_marginTop="7dp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="6">


        <Button
            android:id="@+id/sou_Button_haiwai"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/ding_51"
            android:text="店铺"
            android:textColor="@color/haiwai_color_list"
            android:textSize="12sp" />

        <Button
            android:id="@+id/sou_Button_fenlei"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/ding_52"
            android:text="收藏"
            android:textColor="@color/fenlei_color_list"
            android:textSize="12sp" />


        <Button
            android:id="@+id/shoping_lijimai"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/ding_53"
            android:text="立即购买"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/sou_Button_gouwuche"
            style="@style/gouwu_button_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/ding_07" />

    </LinearLayout>

</RelativeLayout>