    android:layout_height="50dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/geren_item_tilte_img"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:src="@drawable/ding_01" />

    <TextView
        android:id="@+id/geren_item_geren_dingdan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:text="123"
        android:textColor="@color/haiwai_text_color_hai"

        />
    <View

        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"
        />

    <ImageView
        android:id="@+id/defa_img"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:src="@drawable/ding_115" />
</LinearLayout>