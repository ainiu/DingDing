<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@color/haiwai_button__true_color"
    android:orientation="vertical">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/sou_girdview_network"
        android:layout_width="171dp"
        android:layout_height="183dp"
        android:src="@drawable/ding_184" />

    <LinearLayout
        android:id="@+id/sou_girdview_list_image_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sou_girdview_list_text_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="6"
            android:singleLine="true"
            android:text="JAQUA嘉奇娅"
            android:textColor="#333333"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/sou_girdview_list_text_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="59"
            android:textColor="#EB6877"
            android:textSize="10sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/sou_girdview_list_text_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="全新7待 , 全场包邮！"
        android:textColor="#999999"
        android:textSize="9sp" />


</LinearLayout>

