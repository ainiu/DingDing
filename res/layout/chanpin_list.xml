<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView 
        android:id="@+id/chanpin_list_image_01"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ding_125"
        />

    <TextView
        android:id="@+id/chanpin_list_text_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@+id/chanpin_list_image_01"
        android:text="雅诗兰黛肌透眼部精华霜11ml,深透眼部肌肤,一瓶修护!" 
        android:textColor="#666666"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/changpin_list_text_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/chanpin_list_text_01"
        android:layout_below="@+id/chanpin_list_text_01"
        android:layout_marginTop="5dp"
        android:text="多屏引起的干燥、暗沉、细纹、松弛、黑眼圈、浮肿等眼周问题，抵御并防护污染对眼周肌底的损伤，即时修护累积更精准校对眼周代谢节律..." 
        android:textSize="10sp"
        android:textColor="#686868"
        />

    <TextView
        android:id="@+id/chanpin_list_text_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/changpin_list_text_02"
        android:layout_below="@+id/changpin_list_text_02"
        android:text="活动价"
        android:textSize="12sp"
        android:textColor="#666666"
         />

    <TextView
        android:id="@+id/chanpin_list_text_04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/changpin_list_text_02"
        android:layout_toRightOf="@+id/chanpin_list_text_03"
        android:textColor="#666666"
        android:textSize="12sp"
        android:text="¥178.0" />

    <ImageView
        android:id="@+id/chanpin_list_image_02"
        android:layout_width="30dp"
        android:layout_height="12dp"
        android:layout_alignBottom="@+id/chanpin_list_text_04"
        android:layout_toRightOf="@+id/chanpin_list_text_04"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ding_126" />

    <ImageView
        android:id="@+id/chanpin_list_image_03"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignLeft="@+id/chanpin_list_text_03"
        android:layout_below="@+id/chanpin_list_text_03"
        android:layout_marginTop="3dp"
        android:src="@drawable/ding_33" />

    <TextView
        android:id="@+id/chanpin_list_text_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/chanpin_list_image_03"
        android:layout_toLeftOf="@+id/chanpin_list_text_04"
        android:text="美妆"
        android:textColor="#9A9A9A"
        android:textSize="10sp" />

</RelativeLayout>