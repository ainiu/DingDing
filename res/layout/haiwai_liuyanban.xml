<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingLeft="13dp"
    android:paddingRight="13dp"
    android:paddingTop="7dp"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/liuyanban_zixun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="咨询或评论 : (字数在2-120之间)"
        />

    <EditText
        android:background="@drawable/ding_03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:gravity="left|top"
        android:hint="请输入文字..."
        android:textSize="12dp"
        android:minLines="6"
        android:id="@+id/liuyanban_editText" />
        <CheckBox
            android:id="@+id/liuyanban_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="仅卖家可见(选择后,你的留言只有卖家能看到,建议在咨询价格或个人隐私信息时选择)"
            android:textSize="12sp"
            />
    <LinearLayout
        android:id="@+id/liuyanban_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/liuyanban_btn_clear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="清空"
            />
        <Button
            android:id="@+id/liuyanban_btn_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确定"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:orientation="vertical"
        android:background="@drawable/ding_56">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:singleLine="false"
        android:text="叮叮网友情提醒:为保障你的利益，请加强与网友的沟通，网上成交，请使用智付交易."
        android:textSize="12sp"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:singleLine="false"
            android:text="免责声明:叮叮网为用户展示的商品提供信息由买卖双方自行提供，其真实性、准确性和合法性由信息发布人负责。叮叮网不提供任何保证，并不承担任何法律责任。"
            android:textSize="12sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="right|center_vertical"
            android:layout_weight="1"
            android:layout_height="0dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ding_57"/>
            <TextView
                android:id="@+id/liuyanban_jubao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="举报此商品"
                android:textSize="12sp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>