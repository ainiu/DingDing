<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    android:background="@drawable/body_rectangle_while_border_bg"
    android:orientation="vertical"
    android:padding="15dp" >

    <TextView
        android:id="@+id/alterdialog_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lines="2"
        android:textColor="@color/font_color_333333"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/alterdialog_button_cancel"
            style="@style/button_style_fun_border"
            android:layout_margin="5dp"
            android:background="@drawable/button_while_radius_gray_border_bg"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/shopingcar_dialog_cancel"
            android:textColor="@color/font_color_666666"/>

        <Button
            android:id="@+id/alterdialog_button_confirm"
            style="@style/button_style_fun_border"
            android:layout_margin="5dp"
            android:background="@drawable/button_red_bg"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/shoping_dialog_confirm" />
    </LinearLayout>

</LinearLayout>