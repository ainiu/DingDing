<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/haiwai_button__true_color"
    tools:context=".SouActivity">
    <ScrollView
        android:id="@+id/shouye_myscrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/scrollview_child1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <LinearLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#1FA9EB"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/sou_Layout_01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="11dp"
            android:background="@drawable/ding_121"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/sou_image_02"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ding_94" />

            <TextView
                android:id="@+id/sou_text_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="搜索品牌或者宝贝"
                android:textColor="#999999"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>


    <com.baidu.dingding.view.banner.BannerImageView
        android:id="@+id/sou_banner"
        android:layout_width="match_parent"
        android:layout_height="150dp" />


    <LinearLayout
        android:id="@+id/sou_linearLayout_02"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center_vertical"
        android:background="@color/haiwai_button__true_color"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/sou_relativeLayout_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/haiwai_button__true_color"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/sou_image_03"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ding_99" />

            <TextView
                android:id="@+id/sou_text_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="公告"
                android:textColor="#666666"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sou_relativeLayout_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/haiwai_button__true_color"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sou_image_04"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ding_100" />

            <TextView
                android:id="@+id/sou_text_05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="限时抢购"
                android:textColor="#666666"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sou_relativeLayout_05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/haiwai_button__true_color"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sou_image_05"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:src="@drawable/ding_101" />

            <TextView
                android:id="@+id/sou_text_06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="购物指南"
                android:textColor="#666666"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sou_relativeLayout_06"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="19dp"
            android:layout_weight="1"
            android:background="#DDDDDDDD" />

        <TextView
            android:id="@+id/sou_text_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:text="特价抢购"
            android:textColor="#666666"
            android:textSize="10sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginRight="19dp"
            android:layout_weight="1"
            android:background="#DDDDDD" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <com.baidu.dingding.view.MyView.MyGridView
            android:id="@+id/sou_tejia_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center"
            android:numColumns="2" />

    </LinearLayout>

    <TextView
        android:id="@+id/sou_text_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="11dp"
        android:text="新品上市"
        android:textColor="#333333"
        android:textSize="11sp" />

    <LinearLayout
        android:id="@+id/scrollview2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        >

        <com.baidu.dingding.view.MyView.MyGridView
            android:id="@+id/sou_xinpin_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:numColumns="2" />
    </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
